---
import Logo from './Logo.astro';
import Navigation from './Navigation.astro';

interface Props {
  currentPath?: string;
}

const { currentPath } = Astro.props;
---

<header class="fixed top-0 left-0 right-0 z-40">
  <!-- Blur background that appears on scroll -->
  <div 
    id="header-bg" 
    class="absolute inset-0 bg-slate-950/50 backdrop-blur-xl border-b border-white/5 
           opacity-0 transition-opacity duration-300"
  ></div>
  
  <div class="relative max-w-7xl mx-auto px-6 py-4">
    <div class="flex items-center justify-between">
      <Logo />
      <Navigation currentPath={currentPath} />
    </div>
  </div>
</header>

<script type="module" lang="ts">
  import { initHeaderScroll } from '../scripts/header';

  initHeaderScroll();
</script>
