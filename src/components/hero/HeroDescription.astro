---
// Descripción del hero
interface Props {
  text?: string;
}

const { text = "Aquí no solo tienes una app. Tienes tu red sin complicaciones: escribe, compra, paga, explora y transforma tu día… con la claridad de Be Mind Power." } = Astro.props;
---

<p class="hero-description">{text}</p>

<style>
  .hero-description {
    color: #ffffff;
    font-family: 'Neometric', 'Inter', sans-serif;
    font-size: clamp(13px, 1.3vw, 22px);
    font-weight: 400;
    line-height: 1.55;
    text-align: center;
    margin: 0 0 clamp(16px, 2vh, 28px) 0;
    padding: 0 5vw;
    max-width: clamp(650px, 70vw, 900px);
  }

  @media (min-width: 1440px) {
    .hero-description {
      font-size: clamp(16px, 1.4vw, 24px);
      line-height: 1.6;
      margin-bottom: clamp(20px, 2.2vh, 32px);
      max-width: clamp(750px, 72vw, 1000px);
    }
  }

  @media (min-width: 1920px) {
    .hero-description {
      font-size: clamp(18px, 1.5vw, 26px);
      line-height: 1.65;
      margin-bottom: clamp(24px, 2.4vh, 36px);
      max-width: clamp(850px, 74vw, 1100px);
    }
  }

  @media (max-width: 768px) {
    .hero-description {
      font-size: clamp(12px, 2.3vw, 16px);
      line-height: 1.4;
      max-width: 600px;
      margin-bottom: 3vh;
    }
  }

  @media (max-width: 480px) {
    .hero-description {
      font-size: 12px;
      padding: 0 6vw;
      line-height: 1.35;
      margin-bottom: 2.8vh;
    }
  }

  /* iPhone SE y pantallas muy pequeñas */
  @media (max-width: 375px) {
    .hero-description {
      font-size: 11px;
      line-height: 1.3;
      margin-bottom: 2.5vh;
      padding: 0 7vw;
    }
  }
</style>
