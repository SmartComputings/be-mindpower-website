---
// App Store / Google Play
interface Props {
  appStoreUrl?: string;
  googlePlayUrl?: string;
}

const { 
  appStoreUrl = "#", 
  googlePlayUrl = "https://play.google.com/store/apps/details?id=chat.bemindepower.bmpchat&hl=es_US"
} = Astro.props;
---

<div class="hero-store-buttons">
  <a href={appStoreUrl} class="store-btn" aria-label="Download on App Store">
    <img src="/images/app-store-badge.svg" alt="Download on App Store" />
  </a>
  <a href={googlePlayUrl} class="store-btn" aria-label="Get it on Google Play">
    <img src="/images/google-play-badge.svg" alt="Get it on Google Play" />
  </a>
</div>

<style>
  .hero-store-buttons {
    display: flex;
    gap: clamp(18px, 2vw, 28px);
    position: relative;
    z-index: 18;
  }

  .store-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: clamp(190px, 18vw, 240px);
    height: clamp(58px, 6vh, 70px);
    background: rgba(0, 0, 0, 0.7);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 50px;
    box-shadow: 
      0 0 25px 0px rgba(59, 130, 246, 0.4),
      inset 0 1px 0 rgba(255, 255, 255, 0.1);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    overflow: hidden;
    text-decoration: none;
  }

  .store-btn:hover {
    transform: scale(1.03);
    box-shadow: 
      0 0 35px 0px rgba(59, 130, 246, 0.6),
      inset 0 1px 0 rgba(255, 255, 255, 0.15);
  }

  .store-btn img {
    height: clamp(35px, 3.5vh, 46px);
    width: auto;
    object-fit: contain;
  }

  @media (min-width: 1440px) {
    .hero-store-buttons {
      gap: clamp(22px, 2.2vw, 32px);
    }

    .store-btn {
      width: clamp(210px, 19vw, 260px);
      height: clamp(64px, 6.5vh, 75px);
    }

    .store-btn img {
      height: clamp(40px, 4vh, 50px);
    }
  }

  @media (min-width: 1920px) {
    .hero-store-buttons {
      gap: clamp(26px, 2.4vw, 36px);
    }

    .store-btn {
      width: clamp(230px, 20vw, 280px);
      height: clamp(68px, 7vh, 80px);
    }

    .store-btn img {
      height: clamp(44px, 4.5vh, 54px);
    }
  }

  @media (max-width: 1024px) {
    .store-btn {
      width: 190px;
      height: 58px;
    }

    .store-btn img {
      height: 35px;
    }
  }

  @media (max-width: 768px) {
    .hero-store-buttons {
      flex-direction: column;
      gap: 12px;
      margin-top: 1.5vh;
    }

    .store-btn {
      width: 175px;
      height: 54px;
    }

    .store-btn img {
      height: 32px;
    }
  }

  @media (max-width: 480px) {
    .hero-store-buttons {
      gap: 10px;
      margin-top: 1.2vh;
    }

    .store-btn {
      width: 165px;
      height: 50px;
    }

    .store-btn img {
      height: 29px;
    }
  }

  /* iPhone SE y pantallas muy peque√±as */
  @media (max-width: 375px) {
    .hero-store-buttons {
      gap: 9px;
      margin-top: 1vh;
    }

    .store-btn {
      width: 155px;
      height: 47px;
    }

    .store-btn img {
      height: 27px;
    }
  }
</style>
