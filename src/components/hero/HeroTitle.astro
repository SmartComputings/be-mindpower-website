---
// Título hero
interface Props {
  text?: string;
}

const { text = "A una experiencia sin precedentes" } = Astro.props;
---

<h1 class="hero-title">{text}</h1>

<style>
  .hero-title {
    color: #ffffff;
    font-family: 'Neometric', 'Inter', sans-serif;
    font-size: clamp(17px, 2.3vw, 36px);
    font-weight: 400;
    line-height: 1.5;
    text-align: center;
    margin: 0 0 clamp(8px, 1vh, 14px) 0;
    padding: 0 5vw;
  }

  @media (min-width: 1440px) {
    .hero-title {
      font-size: clamp(24px, 2.5vw, 40px);
      line-height: 1.55;
      margin-bottom: clamp(10px, 1.1vh, 16px);
    }
  }

  @media (min-width: 1920px) {
    .hero-title {
      font-size: clamp(28px, 2.7vw, 44px);
      line-height: 1.6;
      margin-bottom: clamp(12px, 1.2vh, 18px);
    }
  }

  @media (max-width: 768px) {
    .hero-title {
      font-size: clamp(16px, 3.2vw, 24px);
      line-height: 1.35;
      margin-bottom: 1.8vh;
    }
  }

  @media (max-width: 480px) {
    .hero-title {
      font-size: 15px;
      line-height: 1.3;
      margin-bottom: 1.6vh;
      padding: 0 6vw;
    }
  }

  /* iPhone SE y pantallas muy pequeñas */
  @media (max-width: 375px) {
    .hero-title {
      font-size: 14px;
      line-height: 1.3;
      margin-bottom: 1.4vh;
    }
  }
</style>
