---
// Teléfono (imagen + rotación)
interface Props {
  src?: string;
  rotation?: number;
}

const { 
  src = "/images/telefono.png",
  rotation = -10
} = Astro.props;
---

<a href="/chat" class="hero-phone" style={`--rotation: ${rotation}deg`} aria-label="Ir al chat">
  <img src={src} alt="Teléfono BeMind" />
</a>

<style>
  .hero-phone {
    position: absolute;
    left: 50%;
    bottom: -42%;
    transform: translateX(-50%) rotate(var(--rotation, -10deg));
    width: clamp(340px, 30vw, 450px);
    z-index: 25;
    pointer-events: auto;
    cursor: pointer;
    text-decoration: none;
  }

  /* Laptops medianas (13"-15") */
  @media (min-width: 1280px) and (max-height: 900px) {
    .hero-phone {
      bottom: -48%;
      width: clamp(320px, 28vw, 420px);
    }
  }

  @media (min-width: 1440px) {
    .hero-phone {
      width: clamp(400px, 34vw, 550px);
      bottom: -40%;
    }
  }

  @media (min-width: 1920px) {
    .hero-phone {
      width: clamp(450px, 36vw, 620px);
      bottom: -36%;
    }
  }

  .hero-phone img {
    width: 100%;
    height: auto;
  }

  @media (max-width: 1024px) {
    .hero-phone {
      width: min(380px, 35vw);
      bottom: -24%;
    }
  }

  @media (max-width: 768px) {
    .hero-phone {
      width: min(340px, 55vw);
      bottom: -24%;
    }
  }

  @media (max-width: 480px) {
    .hero-phone {
      width: min(300px, 65vw);
      bottom: -20%;
    }
  }
</style>
