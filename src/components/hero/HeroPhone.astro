---
// Teléfono (imagen + rotación)
interface Props {
  src?: string;
  rotation?: number;
}

const { 
  src = "/images/telefono.png",
  rotation = -10
} = Astro.props;
---

<a href="/chat" class="hero-phone" style={`--rotation: ${rotation}deg`} aria-label="Ir al chat">
  <img id="hero-phone-image" src={src} alt="Teléfono BeMind" />
</a>

<style>
  .hero-phone {
    position: absolute;
    left: 0;
    top: 60%;
    width: 100%;
    height: 40%;
    z-index: 25;
    pointer-events: auto;
    cursor: pointer;
    text-decoration: none;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero-phone img {
    /* Apply rotation to image, not container, for better centering control if needed, 
       or keep on container but ensure width allows centering. 
       Here we keep structure but use flexbox to center. */
    width: clamp(600px, 70vw, 1200px);
    height: auto;
    transform: rotate(var(--rotation, -10deg));
    max-height: 150%; /* Allow extreme overflow per user request */
    object-fit: contain;
  }

  /* Remove conflicting absolute positioning queries */
  @media (min-width: 1280px) and (max-height: 900px) {
    .hero-phone img { width: clamp(550px, 60vw, 900px); }
  }

  @media (min-width: 1440px) {
    .hero-phone img { width: clamp(700px, 65vw, 1200px); }
  }

  @media (min-width: 1920px) {
    .hero-phone img { width: clamp(800px, 70vw, 1400px); }
  }

  @media (max-width: 1024px) {
    .hero-phone img { width: min(650px, 75vw); }
  }

  @media (max-width: 768px) {
    .hero-phone img { width: min(550px, 90vw); }
  }

  @media (max-width: 480px) {
    .hero-phone img { width: min(450px, 95vw); }
  }
</style>
