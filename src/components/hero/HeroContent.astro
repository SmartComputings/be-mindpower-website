---
import HeroLogoText from './HeroLogoText.astro';
import HeroWelcomeTitle from './HeroWelcomeTitle.astro';
import HeroTitle from './HeroTitle.astro';
import HeroDescription from './HeroDescription.astro';
import HeroStoreButtons from './HeroStoreButtons.astro';

interface Props {
  welcomeText?: string;
  mainTitle?: string;
  description?: string;
}

const { 
  welcomeText,
  mainTitle,
  description
} = Astro.props;
---

<div class="hero-content">
  <HeroLogoText />
  <HeroWelcomeTitle text={welcomeText} />
  <HeroTitle text={mainTitle} />
  <HeroDescription text={description} />
  <HeroStoreButtons />
</div>

<style>
  .hero-content {
    position: absolute;
    top: 12%;
    left: 0;
    width: 100%;
    height: 46%;
    z-index: 15;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 0 5vw;
  }

  /* Reduce specificity or remove specialized padding for other breakpoints 
     since we want 50% height centered globally */
     
  @media (max-width: 1024px) {
    .hero-content {
      padding-top: 0;
    }
  }

  @media (max-width: 768px) {
    .hero-content {
      padding-top: 24vh;
    }
  }

  @media (max-width: 480px) {
    .hero-content {
      padding-top: 22vh;
    }
  }

  /* iPhone SE y pantallas muy peque√±as */
  @media (max-width: 375px) {
    .hero-content {
      padding-top: 20vh;
    }
  }
</style>
